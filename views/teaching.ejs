<%- include('./partials/header'); -%>
<%- include('./partials/navbar'); -%>


    <div class="container-fluid teaching-heading">
        <br>
        <br>
        <br>
        <br>
        <br>
        <h1>Teaching</h1>
    </div>
    
    <div class="teaching-nav">
        
        <h3>Teaching</h3>
        
    </div>

    <div class="teaching-info">
        <%for(let teach of teaching){%>
        <div class="semester-year">
            <h1>Semester Year <%=teach.year%></h1>
            <%const onGoing = teach.info.filter((ele)=>{return ele.status == "On Going"})%>
            <%const completed = teach.info.filter((ele)=>{return ele.status=="Completed"})%>
            <hr>
            <%if(onGoing.length>0){%>
            <%for(let inform of onGoing){%>
            <div class="semester-info">
                <h4>Semester status -> <%=inform.status%></h4>
                <h4>semester -> <%=inform.semester%></h4>
                <h4>Course Code ->  <%=inform.courseCode%></h4>
                <h4>Course Name -> <%=inform.courseName%></h4>
                <h4>Level -> <%=inform.level%></h4>
                <h4>Course Overview <a href="/teaching/<%=inform.courseLink%>">link</a></h4>
            </div>
            <%}%>
            <%}if(completed.length>0){%>
                <%for(let inform of completed){%>
                    <div class="semester-info">
                        <h4>Semester status -> <%=inform.status%></h4>
                        <h4>semester -> <%=inform.semester%></h4>
                        <h4>Course Code ->  <%=inform.courseCode%></h4>
                        <h4>Course Name -> <%=inform.courseName%></h4>
                        <h4>Level -> <%=inform.level%></h4>
                        <h4>Course Overview <a href="/teaching/<%=inform.courseLink%>">link</a></h4>
                    </div>
                    <%}%>
                <%}%>
            </div>
        <%}%>
        
    </div>

    
   


<%- include('./partials/footer'); -%>